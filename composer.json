{
    "name": "benji07/sso-bundle",
    "type": "symfony-bundle",
    "description": "An SSO firewall for Symfony2",
    "keywords": ["security", "firewall", "sso", "openid", "oauth"],
    "authors": [
        {
            "name": "Benjamin Lévêque",
            "email": "benjamin@leveque.me"
        }
    ],

    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "2.1.*",
        "symfony/security-bundle": "2.1.*"
    },

    "suggesst": {
        "sensio/buzz-bundle": "For OAUth1.0a support",
        "fp/lightopenid": "For Openid support"
    },

    "autoload": {
        "psr-0": {
            "Benji07\\SsoBundle": ""
        }
    },

    "target-dir": "Benji07/SsoBundle"
}
