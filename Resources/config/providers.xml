<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="benji07_sso.provider.steam.class">Benji07\SsoBundle\Providers\SteamProvider</parameter>
        <parameter key="benji07_sso.provider.github.class">Benji07\SsoBundle\Providers\GithubProvider</parameter>
        <parameter key="benji07_sso.provider.facebook.class">Benji07\SsoBundle\Providers\FacebookProvider</parameter>
        <parameter key="benji07_sso.provider.oauth1.class">Benji07\SsoBundle\Providers\OAuth1aProvider</parameter>
        <parameter key="benji07_sso.provider.twitter.class">Benji07\SsoBundle\Providers\TwitterProvider</parameter>
        <parameter key="benji07_sso.provider.google_apps.class">Benji07\SsoBundle\Providers\GoogleAppsProvider</parameter>
    </parameters>

    <services>
        <service id="benji07_sso.provider.steam" class="%benji07_sso.provider.steam.class%">
            <argument type="collection"></argument>
        </service>

        <service id="benji07_sso.provider.github" class="%benji07_sso.provider.github.class%">
            <argument type="collection"></argument>
        </service>

        <service id="benji07_sso.provider.facebook" class="%benji07_sso.provider.facebook.class%">
            <argument type="collection"></argument>
        </service>

        <service id="benji07_sso.provider.oauth1" class="%benji07_sso.provider.oauth1.class" abstract="true">
            <argument type="collection"></argument>
            <argument type="service" id="buzz" on-invalid="null" />
        </service>

        <service id="benji07_sso.provider.twitter" class="%benji07_sso.provider.twitter.class%" parent="benji07_sso.provider.oauth1">
        </service>

        <service id="benji07_sso.provider.google_apps" class="%benji07_sso.provider.google_apps.class%">
            <argument type="collection"></argument>
        </service>
    </services>

</container>
